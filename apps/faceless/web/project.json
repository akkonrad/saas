{
  "name": "face-web",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/faceless/web/src",
  "tags": ["type:app", "platform:web", "scope:faceless"],
  "targets": {
    "build": {
      "executor": "@angular/build:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/faceless/web",
        "browser": "apps/faceless/web/src/main.ts",
        "tsConfig": "apps/faceless/web/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/faceless/web/public"
          }
        ],
        "styles": ["apps/faceless/web/src/styles.scss"],
        "define": {
          "import.meta.env.NG_APP_SUPABASE_URL": "\"${SUPABASE_URL}\"",
          "import.meta.env.NG_APP_SUPABASE_PUBLISHABLE_KEY": "\"${SUPABASE_PUBLISHABLE_KEY}\""
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "fileReplacements": [
            {
              "replace": "apps/faceless/web/src/environments/environment.development.ts",
              "with": "apps/faceless/web/src/environments/environment.ts"
            }
          ]
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular/build:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "face-web:build:production"
        },
        "development": {
          "buildTarget": "face-web:build:development"
        }
      },
      "defaultConfiguration": "development",
      "dependsOn": ["face-api:serve"],
      "options": {
        "proxyConfig": "apps/faceless/web/proxy.conf.json",
        "port": 4210
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/faceless/web/jest.config.cts",
        "tsConfig": "apps/faceless/web/tsconfig.spec.json"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "face-web:build",
        "staticFilePath": "dist/apps/faceless/web/browser",
        "spa": true
      }
    }
  }
}
