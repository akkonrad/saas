# Supabase Configuration
# Find these in your Supabase Dashboard: Settings > API
SUPABASE_URL=https://imdxyuyjxmymsvytyxri.supabase.co
# Publishable Key (formerly "anon key") - safe for client-side, respects RLS
SUPABASE_PUBLISHABLE_KEY=your-publishable-key-here
# Secret Key (formerly "service_role key") - server-side only! Bypasses RLS, has full permissions
SUPABASE_SECRET_KEY=your-secret-key-here

# Database Configuration
# Direct PostgreSQL connection (optional - for migrations, admin tasks, etc.)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.imdxyuyjxmymsvytyxri.supabase.co:5432/postgres
DATABASE_PASSWORD=your-database-password-here

# Application Configuration
NODE_ENV=development
PORT=3000


# Stripe
STRIPE_PUBLISHABLE_KEY=<key>
STRIPE_SECRET_KEY=<secret>

# SFTP Deployment - Koalka Landing (OVH)
KOALKA_LANDING_SFTP_HOST=<ftp>
KOALKA_LANDING_SFTP_PORT=22
KOALKA_LANDING_SFTP_USER=<user>
KOALKA_LANDING_SFTP_PASSWORD=<password>
KOALKA_LANDING_SFTP_REMOTE_PATH=<path>

# Koalka Contact Form Configuration
# Email recipient for contact form submissions
KOALKA_EMAIL=email

# reCAPTCHA v3 Configuration (Google reCAPTCHA)
# Site key is used in frontend (apps/koalka/landing/src/environments/)
# Secret key is used in Supabase Edge Function for verification
KOALKA_CAPTCHA_KEY=key
KOALKA_CAPTCHA_SECRET=secret

# Resend API Key for sending emails from Supabase Edge Function
KOALKA_RESEND_API_KEY=api_key
