{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@saas/shared/util-schema": ["libs/shared/util-schema/src/index.ts"],
      "@saas/api/data-access-supabase": [
        "libs/api/data-access-supabase/src/index.ts"
      ],
      "@saas/api/data-access-supabase-auth": [
        "libs/api/data-access-supabase-auth/src/index.ts"
      ],
      "@saas/api/data-access-supabase-database": [
        "libs/api/data-access-supabase-database/src/index.ts"
      ],
      "@saas/api/data-access-supabase-storage": [
        "libs/api/data-access-supabase-storage/src/index.ts"
      ],
      "@saas/web/data-access-auth": ["libs/web/data-access-auth/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
